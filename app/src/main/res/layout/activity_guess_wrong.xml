<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.kreid.decisiontree.GuessWrongActivity">

    <TextView android:text="Oh dear looks like you bamboozled me! Well, please tell me who you were thinking of m8:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newAnswerText"
        android:layout_below="@+id/titleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/titleText"
        android:layout_alignEnd="@+id/titleText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitNewAnswerBtn"
        android:singleLine="true"
        android:background="@drawable/btn_green"
        android:layout_below="@+id/newQuestionText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Not so fast there boss. You need to write something."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/validateErrorText"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/newAnswerText"
        android:layout_alignEnd="@+id/newAnswerText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newQuestionText"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="And pls put a new question to lead to ur new answer.:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/newAnswerText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
